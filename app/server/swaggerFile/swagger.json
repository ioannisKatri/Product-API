{
  "openapi": "3.0.0",
  "info": {
    "title": "Price Calculation API",
    "description": "This api is used to calculate prices of different products",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local server"
    }
  ],
  "paths": {
    "/": {
      "get": {
        "summary": "Welcome API page.",
        "description": "The API is working.",
        "responses": {
          "200": {
            "description": "A JSON array of user names",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "hello": {
                      "type": "string",
                      "example": "Hi!"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/list-price": {
      "post": {
        "summary": "Calculates the total price of the products",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string",
                      "example": "strawberries"
                    },
                    "unit_price": {
                      "type": "number",
                      "example": 12
                    },
                    "quantity": {
                      "type": "number",
                      "example": 33
                    },
                    "total_discount": {
                      "type": "number",
                      "example": 10
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "An object with the calculated total price.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "success"
                    },
                    "total_price": {
                      "type": "number",
                      "example": 56
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "An error code with a specific description.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "error"
                    },
                    "message": {
                      "type": "string",
                      "example": "Error code 604. Invalid Number or price below zero"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
